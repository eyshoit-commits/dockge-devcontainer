{
    "name": "Dockge Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "forwardPorts": [5001],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-vscode.vscode-json"
            ]
        }
    },
    "remoteUser": "root",
    "postCreateCommand": "/usr/local/bin/start-services.sh"
}
